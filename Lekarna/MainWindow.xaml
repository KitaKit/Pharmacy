<Window x:Class="Pharmacy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy"
        mc:Ignorable="d"
        Title="Leky" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="400" MinHeight="200">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="18" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="Menu" Width="50">
            </MenuItem>
        </Menu>
        <Menu Height="18" VerticalAlignment="Top" HorizontalAlignment="Right">
            <MenuItem Header="Search" Width="50">
            </MenuItem>
            <MenuItem Header="Sort" Width="50">
            </MenuItem>
        </Menu>
        <TabControl TabStripPlacement="Bottom" Margin="0,18,20,30" x:Name="TabControl">
            <TabItem Header="Medications" x:Name="tabItemMedications">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgMedications" AutoGenerateColumns="False" Margin="0,0,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Title" Width="160"></DataGridTextColumn>
                            <DataGridCheckBoxColumn Header="Availability" Width="70"></DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="Count" Width="50"></DataGridTextColumn>
                            <DataGridCheckBoxColumn Header="Prescription" Width="75"></DataGridCheckBoxColumn>
                            <DataGridCheckBoxColumn Header="Form" Width="50"></DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="Price" Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Header="Warehouse" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Description" Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Warehouses" x:Name="tabItemWarehouses">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgWarehouses" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Title" Width="160"></DataGridTextColumn>
                            <DataGridTextColumn Header="Number" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Medications" Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Manufactures" x:Name="tabItemManufactures">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgManufactures" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="160"></DataGridTextColumn>
                            <DataGridTextColumn Header="Country" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Lisence" Width="50"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Sales" x:Name="tabItemSales">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgSales" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Number" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Prixe" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Medications" Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Purchases" x:Name="tabItemPurchases">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgPurchases" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Number" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Cost" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="Count" Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Header="Provider" Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="Manufacturer" Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="Medications" Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30">
            <Button Content="Add" Width="70" Margin="3"/>
            <Button Content="Edit" Width="70" Margin="3"/>
            <Button Content="Delete" Width="70" Margin="3"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30">
            <Button Content="Save" Width="70" Margin="3"/>
            <Button Content="Close" Width="70" Margin="3"/>
        </StackPanel>
        <StackPanel x:Name="spScrollBar" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 18 0 30" Width="20" Height="{Binding ActualHeight, ElementName=TabControl}">
            <ScrollBar Height="{Binding ActualHeight, ElementName=spScrollBar}" Width="{Binding ActualWidth, ElementName=spScrollBar}"/>
        </StackPanel>
    </Grid>
</Window>
