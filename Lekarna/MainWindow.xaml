<Window x:Name="PharmacyMainWindow" x:Class="Pharmacy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy"
        mc:Ignorable="d"
        Title="Leky" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="400" MinHeight="200">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="18" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="Menu" Width="50">
                <MenuItem x:Name="menuItemLoadFromDataBase" Header="Load from DataBase" Click="menuItemLoadFromDataBase_Click"/>
                <MenuItem Header="Load from CSV-file"/>
                <MenuItem Header="Close database connection"/>
                <MenuItem Header="Save to new CSV-file"/>
            </MenuItem>
        </Menu>
        <Menu Height="18" VerticalAlignment="Top" HorizontalAlignment="Right">
            <MenuItem Header="Search" Width="50">
            </MenuItem>
            <MenuItem Header="Sort" Width="50">
            </MenuItem>
        </Menu>
        <TabControl TabStripPlacement="Bottom" Margin="0,18,0,30" x:Name="mainTabControl">
            <TabItem Header="Medications" x:Name="tabItemMedications">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridMedications" ItemsSource="{Binding MedicationsData}" CanUserReorderColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" x:Name="dataGridMedicationsColumnId"/>
                            <DataGridTextColumn Header="Title" x:Name="dataGridMedicationsColumnTitle"/>
                            <DataGridTextColumn Header="Availability" x:Name="dataGridMedicationsColumnAvailability"/>
                            <DataGridTextColumn Header="Count" x:Name="dataGridMedicationsColumnCount"/>
                            <DataGridTextColumn Header="Prescription" x:Name="dataGridMedicationsColumnPrescription"/>
                            <DataGridTextColumn Header="ExpirationDate" x:Name="dataGridMedicationsColumnExpirationDate"/>
                            <DataGridTextColumn Header="Price" x:Name="dataGridMedicationsColumnPrice"/>
                            <DataGridTextColumn Header="Description" Width="*" x:Name="dataGridMedicationsColumnDescription"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Warehouses" x:Name="tabItemWarehouses">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridWarehouses" AutoGenerateColumns="False" ItemsSource="{Binding WarehousesData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Medications"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Manufacturers" x:Name="tabItemManufacturers">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridManufacturers" AutoGenerateColumns="False" ItemsSource="{Binding ManufacturersData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Country" Binding="{Binding Country}"/>
                            <DataGridTextColumn Header="License" Binding="{Binding License}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Sales" x:Name="tabItemSales">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridSales" AutoGenerateColumns="False" ItemsSource="{Binding SalesData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                            <DataGridTextColumn Header="Medications"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Purchases" x:Name="tabItemPurchases">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridPurchases" AutoGenerateColumns="False" ItemsSource="{Binding PurchasesData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="DeliveryDate" Binding="{Binding DeliveryDate}"/>
                            <DataGridTextColumn Header="Cost" Binding="{Binding Cost}"/>
                            <DataGridTextColumn Header="Medications"/>
                            <DataGridTextColumn Header="Privider"/>
                            <DataGridTextColumn Header="Manufacturers"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30">
            <Button Content="Add" Width="70" Margin="3"/>
            <Button Content="Edit" Width="70" Margin="3"/>
            <Button Content="Delete" Width="70" Margin="3"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30">
            <Button Content="Save" Width="70" Margin="3"/>
            <Button Content="Close" Width="70" Margin="3"/>
        </StackPanel>

    </Grid>
</Window>
