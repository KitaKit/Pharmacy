<Window x:Class="Pharmacy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy"
        mc:Ignorable="d"
        Title="Leky" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="400" MinHeight="200">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="18" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="Menu" Width="50">
                <MenuItem Header="Load from DataBase"/>
                <MenuItem Header="Load from CSV-file"/>
                <MenuItem Header="Save to new CSV-file"/>
            </MenuItem>
        </Menu>
        <Menu Height="18" VerticalAlignment="Top" HorizontalAlignment="Right">
            <MenuItem Header="Search" Width="50">
            </MenuItem>
            <MenuItem Header="Sort" Width="50">
            </MenuItem>
        </Menu>
        <TabControl TabStripPlacement="Bottom" Margin="0,18,0,30" x:Name="TabControl">
            <TabItem Header="Medications" x:Name="tabItemMedications">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listviewMedications" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
            <TabItem Header="Warehouses" x:Name="tabItemWarehouses">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listviewWarehouses" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Manufacturers" x:Name="tabItemManufacturers">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listviewManufacturers" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Sales" x:Name="tabItemSales">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listviewSales" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Purchases" x:Name="tabItemPurchases">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listviewPurchases" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30">
            <Button Content="Add" Width="70" Margin="3"/>
            <Button Content="Edit" Width="70" Margin="3"/>
            <Button Content="Delete" Width="70" Margin="3"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30">
            <Button Content="Save" Width="70" Margin="3"/>
            <Button Content="Close" Width="70" Margin="3"/>
        </StackPanel>

    </Grid>
</Window>
