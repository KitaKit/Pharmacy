<Window x:Name="SaveToNewFileWindow" x:Class="Pharmacy.SaveToFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy"
        mc:Ignorable="d"
        Title="SaveToFileWindow" Height="150" Width="370" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Loaded="SaveToNewFileWindow_Loaded">
    <Grid>
        <Grid Margin="0,0,185,0">
            <ComboBox x:Name="tablesToSaveComboBox" HorizontalAlignment="Center" Margin="5,20,0,5" VerticalAlignment="Bottom" Width="170" Height="20"/>
            <Label HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="150" Content="Select table to save"/>
        </Grid>
        <Grid HorizontalAlignment="Right" Margin="0,0,0,0" Width="185">
            <Button x:Name="selectFileButton" Content="Select file" HorizontalAlignment="Center" Margin="0,20,5,5" VerticalAlignment="Bottom" Width="170" Height="20"/>
            <Label HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="150" Content="Select file to save"/>
        </Grid>
    </Grid>
</Window>
